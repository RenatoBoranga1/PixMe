<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compartilhar Chave Pix via:"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_compartilhar_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wi-Fi Direct"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_compartilhar_nfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NFC"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_compartilhar_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_compartilhar_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR Code"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_voltar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar para a PÃ¡gina Principal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>